{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "components": ["src/components"],
      "styles": ["src/theme"],
      "assets": ["src/assets"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["./src/*", "declarations.d.ts", "src/electron.ts"]
}
